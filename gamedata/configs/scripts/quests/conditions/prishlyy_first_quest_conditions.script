-- prishlyy_first_quest_conditions.script

local quest_id = "prishlyy_first_quest"

-- Проверка: новый запуск игры, ГГ только что заспавнился
function cond_prishlyy_first_quest_start()
    -- Проверяем, что у ГГ ещё нет инфо‑порции с этим квестом
    if not game:actor():has_info_portion(quest_id) then
        return true
    end
    return false
end
